{
  "name": "iwomi-backend-fastify",
  "version": "1.0.0",
  "description": "Backend API for MERN blog with Fastify",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "start": "node --experimental-specifier-resolution=node dist/index.js",
    "dev": "tsx src/index.ts --watch",
    "build": "tsc",
    "prod": "NODE_ENV=production node --experimental-specifier-resolution=node dist/index.js",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "seed": "tsx src/scripts/seed.ts"
  },
  "keywords": [
    "fastify",
    "blog",
    "api",
    "typescript"
  ],
  "author": "Johan Priso",
  "license": "ISC",
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.0.1",
    "@fastify/jwt": "^9.1.0",
    "@fastify/multipart": "^9.0.3",
    "@fastify/static": "^8.1.1",
    "@gradio/client": "^1.14.2",
    "bcrypt": "^6.0.0",
    "dotenv": "^16.5.0",
    "fastify": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.14.0",
    "nanoid": "^5.1.5",
    "nodemailer": "^6.10.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.15.3",
    "@types/nodemailer": "^6.4.17",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "nodemon": "^3.1.10",
    "pino-pretty": "^13.0.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  }
}
