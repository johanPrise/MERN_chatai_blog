# Configuration de la base de données
MONGODB_URI=mongodb://localhost:27017/mern_blog
DB_NAME=mern_blog

# Configuration du serveur
PORT=4200
NODE_ENV=development
API_PREFIX=/api/v1
APP_URL=http://localhost:5173

# JWT Secret pour l'authentification
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=30d

# Configuration email (pour la récupération de mot de passe, etc.)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=your_email@example.com
EMAIL_PASS=your_email_password
EMAIL_FROM=your_email@example.com
EMAIL_SECURE=false

# Configuration de l'API IA
AI_API_KEY=your_openai_api_key
AI_API_URL=https://api.openai.com/v1/chat/completions

# Configuration de l'API Qwen
QWEN_PROMPT=Tu es un assistant utile et amical pour un blog sur la technologie et l'IA.

# URL du frontend pour les redirections
FRONTEND_URL=http://localhost:5173

# Configuration Redis (optionnel)
REDIS_URL=redis://localhost:6379
