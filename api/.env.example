# Configuration de la base de données
MONGODB_URI=mongodb://localhost:27017/mern_blog
DB_NAME=mern_blog

# Configuration du serveur
PORT=5000
NODE_ENV=development

# JWT Secret pour l'authentification
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=7d

# Configuration email (pour la récupération de mot de passe, etc.)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=your_email@example.com
EMAIL_PASS=your_email_password
EMAIL_FROM=your_email@example.com

# Configuration de l'API IA (si applicable)
AI_API_KEY=your_ai_api_key
AI_API_URL=https://api.example.com/ai

# URL du frontend pour les redirections
FRONTEND_URL=http://localhost:5173
